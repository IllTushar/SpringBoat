<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".songandvideo">
<ImageView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/l1"/>
    <Button
        android:id="@+id/about"
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:text="!"
        android:layout_marginTop="20dp"
        android:textSize="32dp"
        android:layout_marginLeft="300dp"
        android:textColor="@color/black"
        android:background="@drawable/btnround"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="90dp"
        android:text="Choose Your Favourite"
        android:textAlignment="center"
        android:gravity="center"
        android:textSize="37dp"
        android:fontFamily="cursive"
        android:textColor="@color/white"
        android:textStyle="bold|italic"/>
    <TextView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:text="Latest Video"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_video_library_24"
        android:textColor="@color/black"
        android:layout_marginTop="190dp"
        android:fontFamily="cursive"/>
    <Button
        android:id="@+id/btnvedio"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="270dp"
        android:layout_centerHorizontal="true"
        android:text="Click"
        android:textSize="18dp"
        android:background="@drawable/btnround"/>
    <TextView
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:text="Latest Songs"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_baseline_library_music_24"
        android:textColor="@color/black"
        android:layout_marginTop="370dp"
        android:fontFamily="cursive"/>
    <Button
        android:id="@+id/btnsong"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="460dp"
        android:layout_centerHorizontal="true"
        android:text="Click"
        android:textSize="18dp"
        android:background="@drawable/btnround"/>
</RelativeLayout>